<div>
  <h3> <%= I18n.t("month") %>: <%= I18n.t((Date.current - 1.month).strftime("%B")) %> </h3>
</div>

<table class="table table-striped mt-5">
  <thead>
  <tr class="text-center">
    <th> Posto/Graduação</th>
    <th> Nome</th>
    <th> Pontuação </th>
    <th> Ação </th>
  </tr>
  </thead>
  <tbody>
  <% @policemen.sort_by(&:score_last_month).reverse.each do |policeman| %>
    <div id="<%= dom_id policeman %>">
      <tr class="text-center">
        <td> <%= policeman.position %> </td>
        <td> <%= policeman.name %> </td>
        <td> <%= policeman.score_last_month %> </td>
        <td> <%= link_to I18n.t("show_this_policeman"), "../home/#{policeman.id}", data: {turbo: false}, class: "btn btn-info btn-sm" %> </td>
      </tr>
    </div>
  <% end %>
  </tbody>
</table>

<%= link_to I18n.t("back"), home_path %>