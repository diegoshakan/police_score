<% @policeman.occurrences.each do |occurrence| %>
  <div id="<%= dom_id occurrence %>">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Ocorrência</th>
          <th scope="col">Pontuação</th>
          <th scope="col">Data</th>
          <th colspan="2">Ações</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= occurrence.type_name %></td>
          <td><%= occurrence.value %></td>
          <td><%= occurrence.date %></td>
          <td> <%= link_to "Editar", edit_policeman_occurrence_path(@policeman, occurrence) %> </td>
          <td> <%= button_to "Deletar", [@policeman, occurrence], method: :delete, data: {confirm: 'Tem certeza que deseja deletar esta ocorrência?'} %> </td>
        </tr>
      </tbody>
    </table>
</div>
<% end %>
