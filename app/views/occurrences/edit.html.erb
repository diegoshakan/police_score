<h1>Editing occurrence</h1>

<div>
  <%= form_with(model: [@policeman, @occurrence]) do |form| %>
    <div>
      <%= form.label :type_name, style: "display: block" %>
      <%= form.text_field :type_name %>
    </div>

    <div>
      <%= form.label :value, style: "display: block" %>
      <%= form.text_field :value %>
    </div>

    <div>
      <%= form.label :date, style: "display: block" %>
      <%= form.date_field :date %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>

<br>

<div>
  <%= link_to "Back to occurrences", policeman_path(@policeman) %>
</div>
