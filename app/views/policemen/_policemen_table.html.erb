<%= turbo_frame_tag 'search' do %>
  <table class="table table-striped">
    <thead>
    <tr class="text-center">
      <th>Posto/Graduação</th>
      <th>Nome</th>
      <th> Pontuação </th>
      <th colspan="3">Ações</th>
    </tr>
    </thead>
    <tbody>
    <% policemen.each do |policeman| %>
      <div id="<%= dom_id policeman %>">
        <tr class="text-center">
          <td> <%= policeman.position %> </td>
          <td> <%= policeman.name %> </td>
          <td> <%= policeman.score_by_month %> </td>
          <td> <%= link_to "Show this policeman", policeman, data: {turbo: false}, class: "btn btn-info btn-sm" %> </td>
          <td> <%= link_to "Editar", edit_policeman_path(policeman), data: {turbo: false}, class: "btn btn-warning btn-sm" %> </td>
          <td> <%= button_to "Deletar", policeman, method: :delete, data: {confirm: 'Tem certeza que deseja deletar esta ocorrência?'}, class: "btn btn-danger btn-sm" %> </td>
        </tr>
      </div>
    <% end %>
    </tbody>
  </table>
<% end %>